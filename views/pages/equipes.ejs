<%- partial('../includes/header') %>
    <div class="col-auto">
        <div class="page-utilities">
            <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-12 col-md-12">
                <div class="app-card app-card-settings shadow-sm p-4">
                    <div class="app-card-body">
                        <form class="settings-form" method="POST">
                            <div class="mb-3">
                                <label for="setting-input-1" class="form-label">Veuillez saisir le nom de l'équipe
                                <span class="ms-2" data-container="body" data-bs-toggle="popover" data-trigger="hover" data-placement="top" data-content="This is a Bootstrap popover example. You can use popover to provide extra info."><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M8.93 6.588l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588z"/>
                                    <circle cx="8" cy="4.5" r="1"/>
                                    </svg>
                                </span>
                            </label>
                                <input type="text" class="form-control" id="setting-input-1" name="intitule" required placeholder="Nom Equipe">
                            </div>
                            <button type="submit" class="btn app-btn-primary">Enregistrer </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-12 col-lg-12">
                <div class="app-card app-card-stat shadow-sm h-100">
                    <div class="app-card app-card-orders-table mb-5">
                        <div class="app-card-body p-3 p-lg-4">
                            <div class="table-responsive">
                                <table class="table mb-0 text-left">
                                    <thead>
                                        <tr>
                                            <th class="cell">N° Equipe</th>
                                            <th class="cell">Intitule</th>
                                            <th class="cell"></th>
                                            <th class="cell"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% 
                                        for(var i=0; i< equipes.length; i++) {
                                            let equipe = equipes[i];
                                        %>
                                            <tr>
                                                <td class="cell">#
                                                    <%= equipe.id %>
                                                </td>
                                                <td class="cell">
                                                    <%= equipe.intitule %>
                                                </td>
                                                <td class="cell">
                                                    <div class="form-check form-switch mb-3">
                                                        <input class="form-check-input" type="checkbox" id="settings-switch-1" checked>
                                                    </div>
                                                </td>
                                                <td class="cell">
                                                    <a class="btn-sm app-btn-secondary" href="/equipe/details/<%= equipe.id %>">Ouvrir</a>
                                                </td>
                                            </tr>
                                            <%
                                        }
                                        %>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%- partial('../includes/footer') %>