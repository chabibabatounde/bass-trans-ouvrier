<%- partial('../includes/header') %>
    <div class="col-auto">
        <div class="page-utilities">
            <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
            </div>
        </div>

        <div class="row g-4 mb-4">
            <form class="settings-form" method="POST">
                <div class="col-12 col-md-12">
                    <div class="app-card app-card-settings shadow-sm p-4">
                        <div class="app-card-body">

                            <div class="mb-3">
                                <label for="setting-input-1" class="form-label">Choisir l'ouvrier</label>
                                <select class="form-control" name="ouvrier" required>
                                    <option value=""> -- Choisir -- </option>
                                    <% 
                                        for(var i=0; i< ouvriers.length; i++) {
                                            let ouvrier = ouvriers[i];
                                        %>
                                            <option value="<%= ouvrier.id %>"> <%= ouvrier.nom %>  <%= ouvrier.prenom %> </option>
                                        <%
                                        }
                                        %>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="setting-input-1" class="form-label">Définir la catégorie</label>
                                <select class="form-control" name="categorie" required>
                                    <option value=""> -- Categorie -- </option>
                                    <% 
                                        for(var i=0; i< categories.length; i++) {
                                            let categorie = categories[i];
                                        %>
                                            <option value="<%= categorie.id %>"> <%= categorie.intitule %>  </option>
                                        <%
                                        }
                                        %>
                                </select>
                            </div>

                            <button type="submit" class="btn app-btn-primary">Enregistrer </button>

                        </div>
                    </div>
                </div>
            </form>
        </div>


        <div class="row g-4 mb-4">
            <div class="col-12 col-lg-12">
                <div class="app-card app-card-stat shadow-sm h-100">
                    <div class="app-card app-card-orders-table mb-5">
                        <div class="app-card-body p-3 p-lg-4">
                            <div class="table-responsive">
                                <table class="table mb-0 text-left">
                                    <thead>
                                        <tr>
                                            <th class="cell">Nom</th>
                                            <th class="cell">Prenom</th>
                                            <th class="cell">Télephone</th>
                                            <th class="cell">Fonction</th>
                                            <th class="cell"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% 
                                        for(var i=0; i< equipe.membres.length; i++) {
                                            let membre = equipe.membres[i];
                                        %>
                                            <tr>
                                                <td class="cell">
                                                    <%= membre.ouvrier.nom %>
                                                </td>
                                                <td class="cell">
                                                    <%= membre.ouvrier.prenom %>
                                                </td>
                                                <td class="cell">
                                                    <%= membre.ouvrier.telephone %>
                                                </td>
                                                <td class="cell">
                                                    <%= membre.categorie.intitule %>
                                                </td>
                                            </tr>
                                            <%
                                        }
                                        %>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <%- partial('../includes/footer') %>