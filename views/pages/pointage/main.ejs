<%- partial('../../includes/header') %>

    <div class="col-auto">
        <div class="page-utilities">
            <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
            </div>
        </div>
        <div class="row g-4 mb-4">
            <div class="col-6 col-lg-6" onclick="showForm()">
                <div class="app-card app-card-stat shadow-sm h-100">
                    <div class="app-card-body p-3 p-lg-4">
                        <h4 class="stats-type mb-1">Effectuer les pointages par </h4>
                        <div class="stats-figure">Chantier</div>
                        <div class="stats-meta text-success">
                            Ouvriers déployés sur un chantier
                        </div>
                    </div>
                    <a class="app-card-link-mask" href="#"></a>
                </div>
            </div>

            <div class="col-6 col-lg-6">
                <div class="app-card app-card-stat shadow-sm h-100">
                    <div class="app-card-body p-3 p-lg-4">
                        <h4 class="stats-type mb-1">Effectuer les pointages par </h4>
                        <div class="stats-figure">Ouvrier</div>
                        <div class="stats-meta text-success">
                            Tous les ouvriers déployés
                        </div>
                    </div>
                    <a class="app-card-link-mask" href="#/pointages"></a>
                </div>
            </div>
        </div>


        <div class="row g-4 mb-4">
            <div class="col-12 col-md-12">
                <div class="app-card app-card-settings shadowd-sm p-4" style="display: none;" id="selectchanter">
                    <div class="app-card-body">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="setting-input-1" class="form-label">Choisir le chantier</label>
                                <select class="form-control" id="chantier" required>
                                <option value="0"> -- Chantier -- </option>
                                    <% 
                                        for(var i=0; i< chantiers.length; i++) {
                                            let chantier = chantiers[i];
                                        %>
                                            <option value="<%= chantier.id %>"> <%= chantier.intitule %> </option>
                                        <%
                                        }
                                        %>
                            </select>
                            </div>
                            <div class="col-6 col-lg-3 mb-3">
                                <button type="submit" class="btn app-btn-primary" onclick="submitMyForm()">Enregistrer </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <%- partial('../../includes/footer') %>

        <script>
            function showForm() {
                $('#selectchanter').show(500)
            }

            function submitMyForm() {
                if ($("#chantier").val() == "0") {
                    swal("Veuillez choisir un chantier", "", "error");
                } else {
                    location.href = "/pointage/chantier/" + $("#chantier").val();
                }
            }
        </script>